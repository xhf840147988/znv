<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@mipmap/ic_bg_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/closeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="14dp"
            android:src="@mipmap/ic_close" />

        <TextView
            android:id="@+id/loginView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_bg"
            android:drawableStart="@mipmap/ic_dialog_store_login"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:paddingTop="10dp"
            android:drawablePadding="6dp"
            android:paddingBottom="10dp"
            android:text="商家登录"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/enterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_red_bg"
            android:drawableStart="@mipmap/ic_dialog_enter_store"
            android:layout_gravity="center"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:paddingTop="10dp"
            android:drawablePadding="6dp"
            android:paddingBottom="10dp"
            android:text="入驻登录"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>