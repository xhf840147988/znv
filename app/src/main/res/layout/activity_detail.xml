<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="小红书商城"
            android:textColor="@android:color/black" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tipView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red"
                android:lineSpacingExtra="4dp"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:text="2019年11月30号前为扶持个人商家业务拓展，商家无需缴纳保证金，但是需出示资产证明"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_detail_img2"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="根据国家质检总局规定，为确保商品真实性和实用性，商家需缴纳店铺保证金作为未买家的商品质量保证" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="填写下方信息完成商家实名信息认证"
                        android:textColor="#0070BB" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="商家姓名"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_gray"
                            android:drawableStart="@mipmap/ic_detail_ed1"
                            android:drawablePadding="8dp"
                            android:hint=" 请在此输入商家姓名"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="身份证号码"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_gray"
                            android:digits="1234567890xX"
                            android:drawableStart="@mipmap/ic_detail_ed2"
                            android:drawablePadding="8dp"
                            android:hint="请在此输入身份证号码"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="收款银行卡号"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_gray"
                            android:drawableStart="@mipmap/ic_detail_ed3"
                            android:drawablePadding="8dp"
                            android:hint="请在此输入银行卡号"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="银行预留手机"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit4"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:background="@drawable/shape_ed_stork_gray"
                            android:drawableStart="@mipmap/ic_detail_ed4"
                            android:drawablePadding="8dp"
                            android:hint="  请在此输入手机号"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="验证码"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit5"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_left"
                            android:hint="请在此输入验证码"
                            android:paddingStart="12dp"
                            android:inputType="number"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f3f3f3" />

                        <TextView
                            android:id="@+id/tvGetCode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_right"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="获取验证码"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">


                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="邀请码"
                            android:textColor="#333333" />

                        <EditText
                            android:id="@+id/edit6"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_ed_stork_gray"
                            android:hint="(选填)"
                            android:paddingStart="12dp"
                            android:paddingEnd="4dp"
                            android:singleLine="true"
                            android:textSize="14sp" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_detail_check"
                            android:visibility="invisible" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img6" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img7" />

            <ImageView
                android:id="@+id/rechargeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img3" />


            <ImageView
                android:id="@+id/mqView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_detail_img4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="12dp"
                android:text="如遇其他疑问，练习在线客服解答您的疑问"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/confirmView"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_red_bg"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>